<div class="content-panel">

  <h3 class="content-panel__heading current-date-heading">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>  
  </h3>
  
  <div class="content-panel__contents">

  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @journal_entries_by_date[date] %>
      <div class="view-entry">
        <%= link_to "view", "goto_date?full_date=#{date}" %>
      </div>
    <% else %>
      <div class="create-entry">
        <%= link_to "create", new_journal_entry_path(:journal_entry => { :"date(2i)" => date.month, :"date(3i)" => date.day, :"date(1i)" => date.year }) %>
      </div>
    <% end %>
  <% end %>

  </div><!-- .content-panel__contents -->
</div>