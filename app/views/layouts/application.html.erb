<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    
    <% if flash %>
      <div class="flash-container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :class => "flash_#{name}" %>
      <% end %>
      </div>
    <% end %>

    <div class="main container-fluid">

      <% if admin_signed_in? %>
        <div class="admin-actions">
          <p class="sign out">Signed in as <%= current_admin.email %></p>
          <p><%= link_to "sign out", destroy_admin_session_path %></p>
          <%= link_to "+ New Post", new_post_path, :class => "btn pull-right" %>
        </div><!-- .admin-actions -->
      <% end %>

      <h1><%= page_title %></h1>
      <%= yield %>
    </div><!-- .main.container-fluid -->
  </body>
</html>
